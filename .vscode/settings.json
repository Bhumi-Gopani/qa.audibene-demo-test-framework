{
  "java.configuration.updateBuildConfiguration": "interactive",
  "[gherkin]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true
  },
  "[markdown]": {
    "editor.wordWrap": "on"
  },
  "[java]": {
    "editor.formatOnSave": true
  }
}
